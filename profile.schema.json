{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["profile", "about", "tech_stack"],
  "properties": {
    "profile": {
      "type": "object",
      "required": ["name", "title", "focus", "website"],
      "properties": {
        "name": { "type": "string" },
        "title": { "type": "string" },
        "focus": {
          "type": "array",
          "items": { "type": "string" }
        },
        "website": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "about": {
      "type": "object",
      "properties": {
        "summary": { "type": "string" },
        "principles": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "tech_stack": {
      "type": "array",
      "items": { "type": "string" }
    }
  }
}

